{
    "source": {
        "include": ["src", "README.md", "package.json"],
        "includePattern": ".js$",
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": ["plugins/markdown"],
    "opts": {
        "encoding": "utf8",
        "readme": "./README.md",
        "destination": "docs",
        "recurse": true,
        "verbose": true,
        "template": "node_modules/foodoc/template"
    },
    "templates": {
        "systemName": "Mongo Compare",
        "systemSummary": "Project documentation",
        "copyright": "Mongo Compare Copyright Â© 2020"
    }
}
